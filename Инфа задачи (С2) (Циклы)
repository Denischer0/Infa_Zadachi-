Задача 1

#include <iostream>
#include <cmath>
using namespace std;
int main() {
	int A, B;
	string x;
	cout << "Write number A than write a sigh and than write number B" << endl;
	cin >> A >> x >> B;
	if (abs(A) > 21478483483647 and abs(B) > 21478483483647) {
		cout << "Your number is too big. Next time try the smaller one";
	}
	else {
		if (x == "+") {
			cout << A + B;
		}
		if (x == "-") {
			cout << A - B;
		}
		if (x == "*") {
			cout << A * B;
		}
		if (x == "/") {
			cout << A / B;
		}
	
	}
}

Задача 2

#include <iostream> 
using namespace std;
int main() {
	int A, B;
	cout << "Write the number A" << endl;
	cin >> A;
	cout << "Write the number B" << endl;
	cin >> B;
	if (A > B) {
		while(A > B) {
			if (A % 2 == 0) {
				A = A / 2;
				cout << "/2" << endl;
			}
			else {
				A = A - 1;
				cout << "-1" << endl;
			}
		}
	}
	else {
		cout << "The number A should be bigger than the number B";
	}

}   
